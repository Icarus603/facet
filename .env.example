# FACET Platform Environment Variables
# Copy this file to .env.local and update with your actual values

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Configuration (for Claude fallback)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Pinecone Vector Database
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX_NAME=facet-memory
PINECONE_ENVIRONMENT=your_pinecone_environment

# Redis for Session Management
REDIS_URL=redis://localhost:6379

# Upstash Redis (production alternative)
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# Next.js Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32
NEXTAUTH_URL=http://localhost:3000

# Application Configuration
APP_NAME=FACET
APP_URL=http://localhost:3000

# AI Model Configuration (GPT-5 for all agents)
DEFAULT_MODEL=gpt-5-2025-08-07
FALLBACK_MODEL=gpt-5-2025-08-07
ORCHESTRATOR_MODEL=gpt-5-2025-08-07
EMOTION_ANALYZER_MODEL=gpt-5-2025-08-07
MEMORY_MANAGER_MODEL=gpt-5-2025-08-07
CRISIS_MONITOR_MODEL=gpt-5-2025-08-07
THERAPY_ADVISOR_MODEL=gpt-5-2025-08-07
PROGRESS_TRACKER_MODEL=gpt-5-2025-08-07

# LangChain Configuration
LANGCHAIN_API_KEY=your_langchain_api_key_here
LANGCHAIN_PROJECT=facet-agents
LANGCHAIN_TRACING_V2=true

# Agent Performance Configuration
ORCHESTRATOR_TIMEOUT_MS=5000
AGENT_PARALLEL_TIMEOUT_MS=3000
CRISIS_RESPONSE_TIMEOUT_MS=2000
MAX_PARALLEL_AGENTS=4
AGENT_RETRY_ATTEMPTS=2

# Agent Coordination Settings
ENABLE_PARALLEL_EXECUTION=true
ENABLE_AGENT_TRANSPARENCY=true
DEFAULT_TRANSPARENCY_LEVEL=standard

# Feature Flags
ENABLE_CRISIS_DETECTION=true
ENABLE_MEMORY_SYSTEM=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=true
ENABLE_LANGCHAIN_ORCHESTRATION=true
ENABLE_AGENT_REASONING_LOGS=true

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here
VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Development/Production Mode
NODE_ENV=development