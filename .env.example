# FACET Agent Orchestration Framework Environment Configuration
# Copy this file to .env and configure with your actual values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/facet_db"
DIRECT_URL="postgresql://username:password@localhost:5432/facet_db"

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL="redis://localhost:6379"
REDIS_PASSWORD=""
REDIS_DB="0"

# ============================================================================
# AZURE OPENAI CONFIGURATION (REQUIRED)
# ============================================================================
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com"
AZURE_OPENAI_API_KEY="your-azure-openai-api-key"
AZURE_OPENAI_API_VERSION="2024-02-01"

# Azure OpenAI Deployment Names
AZURE_OPENAI_GPT4O_DEPLOYMENT="gpt-4o"
AZURE_OPENAI_GPT4O_MINI_DEPLOYMENT="gpt-4o-mini"
AZURE_OPENAI_GPT35_TURBO_DEPLOYMENT="gpt-35-turbo"
AZURE_OPENAI_EMBEDDING_DEPLOYMENT="text-embedding-ada-002"

# ============================================================================
# AGENT ORCHESTRATOR CONFIGURATION
# ============================================================================
MAX_CONCURRENT_COORDINATIONS="50"
DEFAULT_COORDINATION_TIMEOUT_MS="30000"
AGENT_HEALTH_CHECK_INTERVAL_MS="30000"

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
ENCRYPTION_ENABLED="true"
ENCRYPTION_KEY="your-32-character-encryption-key-here12345"
HIPAA_AUDIT_LOGGING="true"

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
PERFORMANCE_METRICS_RETENTION_DAYS="7"
AUDIT_LOG_RETENTION_DAYS="30"
RATE_LIMIT_REQUESTS_PER_MINUTE="100"
RATE_LIMIT_TOKENS_PER_MINUTE="50000"

# ============================================================================
# AGENT CONFIGURATION
# ============================================================================
AGENT_MAX_CONCURRENT_SESSIONS="5"
AGENT_RESPONSE_TIMEOUT_MS="30000"
CIRCUIT_BREAKER_FAILURE_THRESHOLD="5"
CIRCUIT_BREAKER_SUCCESS_THRESHOLD="3"
CIRCUIT_BREAKER_TIMEOUT_MS="60000"

# ============================================================================
# LLM CONFIGURATION
# ============================================================================
LLM_TEMPERATURE="0.7"
LLM_MAX_TOKENS="1000"
LLM_TOP_P="1.0"
LLM_FREQUENCY_PENALTY="0"
LLM_PRESENCE_PENALTY="0"

# ============================================================================
# ENVIRONMENT CONFIGURATION
# ============================================================================
NODE_ENV="development"
LOG_LEVEL="info"

# ============================================================================
# SUPABASE CONFIGURATION (for authentication)
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# ============================================================================
# NEXTJS CONFIGURATION
# ============================================================================
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key"

# ============================================================================
# PRODUCTION OVERRIDES (uncomment for production)
# ============================================================================
# NODE_ENV="production"
# LOG_LEVEL="warn"
# ENCRYPTION_ENABLED="true"
# HIPAA_AUDIT_LOGGING="true"
# MAX_CONCURRENT_COORDINATIONS="100"
# RATE_LIMIT_REQUESTS_PER_MINUTE="200"